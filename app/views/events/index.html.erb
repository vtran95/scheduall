<h1 class="col-md-offset-1">Hosting Events</h1>

<% @users_events.each do |e| %>
    <div class="event-bubble col-md-offset-1">
        <% if e.title.length > 24 %>
            <% part_title = e.title[0..24] + "..." %>
        <% end %>
        <% if part_title %>
            <h2 class><%= link_to part_title, event_path(e) %></h2>
        <% else %>
            <h2 class><%= link_to e.title, event_path(e) %></h2>
        <% end %>
        <p>Start: <%= e.start_date.strftime("%a, %b %d, %Y %I:%M%p") %></p>
        <% unless e.end_date == nil %>
            <p>End: <%= e.end_date.strftime("%a, %b %d, %Y %I:%M%p") %></p>
        <% end %>
    </div>
<% end %>