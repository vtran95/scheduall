<div class="wrapper">
    <h1><%= @event.title %></h1>
    <h5>Host: <%= @event.user.name %></h5>
    <h4>Start: <%= @event.start_date.strftime("%a, %b %d, %Y %I:%M%p") %></h4>
    <% unless @event.end_date == nil %>
        <h4>End: <%= @event.end_date.strftime("%a, %b %d, %Y %I:%M%p") %></h4>
    <% end %>
    <br></br>
    <p>Description: <%= @event.description %></p>
    <h4>Invited</h4>
    <% @event.attendees.each do |guest| %>
        <% if guest.status == "true" %>
            <i class="fa fa-check-square-o" aria-hidden="true"></i>
        <% elsif guest.status == "false" %>
            <i class="fa fa-frown-o" aria-hidden="true"></i>
        <% else %>
            <i class="fa fa-square-o" aria-hidden="true"></i>
        <% end %>
        <p class="listed-guests"><%= @users.find(guest.user_id).name %></p>
    <% end %>
    <% if current_user == @event.user %>
        <%= link_to "Edit", edit_event_path %>
        <%= link_to "Delete", event_path(@event), method: :delete, data: { confirm: "Are you sure you want to delete this event?"} %>
    <% else %>

        <div>
            <%= link_to "Going!", status_attendee_path(@event.attendees.find_by(user_id: current_user.id), :going => true), method: :put %>

            <%= link_to "Not Going", status_attendee_path(@event.attendees.find_by(user_id: current_user.id), :going => false), method: :put %>
            
        </div>

    <% end %>
</div>

<div class="wrapper">
    <% if flash[:alert] %>
        <div><%= flash[:alert] %></div>
    <% end %>
    <%= form_for @comment do |f| %>
        <%= f.text_field :content, class: "form-control", placeholder: "Write your comment here.." %>
        <%= f.hidden_field :event_id %> 
        <div class="actions"><%= f.submit %></div>
    <% end %>
</div>


<% @comments.each do |comment| %>
    <div class="wrapper">
        <div class="comment-title">
            <h4 class="comment-name"><%= comment.user.name %></h4>
            <p class="comment-time"><%= comment.created_at.in_time_zone("America/Los_Angeles").strftime('%a, %d %b %Y %H:%M %p') %> <%= link_to "Delete", comment_path(comment), method: :delete, data: { confirm: "Are you sure you want to delete this comment?"} %></p>
        </div>
        <p><%= comment.content %></p>
    </div>
<% end %>

