<h1 class="col-md-offset-3">Create Event</h1>

<div class="col-md-offset-3">
    <% if flash[:alert] %>
        <div class="alert"><%= flash[:alert] %></div>
    <% end %>
    <%= form_for @event do |f| %>
        <% if @event.errors.any? %>
        <div class="error_messages">
            <h4 style="color:red">Incomplete information provided</h4>
            <ul>
            <% for message in @event.errors.full_messages %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
        <% end %>

        <div class="field col-xs-4">
            <%= f.text_field :title, class:"form-control", placeholder:"Event Name" %>
        </div>
        <br></br>
        <div class="container">
            <div class="row">
                <div class='col-sm-6'>
                    <div class="form-group">
                        <div class='input-group date' id='datetimepicker1'>
                            <%= f.text_field :start_date, class:"form-control", placeholder:"Start date/time" %>
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <script type="text/javascript">
                    $(function () {
                        $('#datetimepicker1').datetimepicker();
                    });
                </script>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class='col-sm-6'>
                    <div class="form-group">
                        <div class='input-group date' id='datetimepicker2'>
                            <%= f.text_field :end_date, class:"form-control", placeholder:"End date/time" %>
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <script type="text/javascript">
                    $(function () {
                        $('#datetimepicker2').datetimepicker();
                    });
                </script>
            </div>
        </div>

        <div class ="field col-md-8">
            <%= f.text_area :description,class:"form-control",placeholder:"Description of your event"%>
        </div>
        <div class="guest-list">
            <h3>Invite friends</h3>
            <% @users.each do |user| %>
                <div class="guest">
                    <%= check_box_tag(user.id, true, false, class: "checkbox") %>
                    <%= label_tag :checkbox, user.name %>
                </div>
            <% end %>
        </div>
        <br></br>
        <div class="actions"><%= f.submit %></div>
        
    <% end %>
</div>